# Telegram Bot Template Configuration
# Copy this file to .env and fill in your values

# Required Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
DATABASE_URL=postgresql://user:password@localhost:5432/botdb

# Optional - OpenRouter AI Integration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Optional - Support Bot (if you want support functionality)
SUPPORT_BOT_TOKEN=your_support_bot_token_here
SUPPORT_CHAT_ID=your_support_chat_id_here

# Optional - Maintainer Chat ID (for critical alerts)
MAINTAINER_CHAT_ID=your_maintainer_chat_id_here

# Optional - Bot Metadata
BOT_NAME=My Telegram Bot
BOT_DESCRIPTION=A simple and clean Telegram bot
BOT_VERSION=1.0.0

# Optional - Localization Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es

# Optional - Logging Configuration
LOG_LEVEL=INFO

# Optional - Development Settings
# Uncomment for development/testing
# DEBUG=true